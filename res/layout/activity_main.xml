<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android1:id="@+id/floorplanlayout"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerInParent="true" >

        <ImageView
            android1:id="@+id/floorplan"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:adjustViewBounds="true"
            android1:contentDescription="@string/floorPlanContentDescription"
            android1:src="@drawable/floorplan8"
            android1:visibility="visible" />

        <ImageView
            android:id="@+id/current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/androidmarker"
            android:visibility="gone"
            android1:contentDescription="@string/wifiContentDescription" />

    </RelativeLayout>

    <Button
        android1:id="@+id/localizeButton"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_centerHorizontal="true"
        android1:text="@string/localize" />

    <Button
        android1:id="@+id/resetButton"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentRight="true"
        android1:text="@string/reset" />

</RelativeLayout>